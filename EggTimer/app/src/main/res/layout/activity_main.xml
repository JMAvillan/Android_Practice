<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/eggImageView"
        android:layout_width="0dp"
        android:layout_height="494dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="32dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/egg" />

    <Button
        android:id="@+id/activateButton"
        android:layout_width="138dp"
        android:layout_height="73dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        android:onClick="activateButton"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="@id/eggImageView"
        app:layout_constraintEnd_toEndOf="@id/eggImageView"
        app:layout_constraintLeft_toLeftOf="@id/eggImageView"
        app:layout_constraintRight_toRightOf="@id/eggImageView"
        app:layout_constraintTop_toTopOf="@+id/eggImageView"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/countDownTextView"
        android:layout_width="295dp"
        android:layout_height="71dp"
        android:gravity="center"
        android:text="00:30"
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/activateButton"
        app:layout_constraintEnd_toEndOf="@+id/eggImageView"
        app:layout_constraintStart_toStartOf="@+id/eggImageView"
        app:layout_constraintTop_toTopOf="@+id/eggImageView"
        app:layout_constraintVertical_bias="0.906" />
</androidx.constraintlayout.widget.ConstraintLayout>